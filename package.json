{
	"name": "@directus/n8n-nodes-directus",
	"version": "1.0.0",
	"description": "n8n community node package for Directus CMS integration",
	"keywords": [
		"n8n-community-node-package",
		"directus",
		"cms"
	],
	"license": "MIT",
	"homepage": "https://github.com/directus/n8n-nodes-directus",
	"author": {
		"name": "Directus Labs",
		"email": "hello@directus.io"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/directus/n8n-nodes-directus.git"
	},
	"engines": {
		"node": ">=20.15"
	},
	"main": "index.js",
	"scripts": {
		"build": "npx rimraf dist && tsc && gulp build:icons",
		"build:n8n": "n8n-node build",
		"dev": "tsc --watch",
		"dev:n8n": "n8n-node dev",
		"format": "prettier nodes credentials --write",
		"lint": "eslint --no-warn-ignored package.json",
		"lint:n8n": "n8n-node lint",
		"lintfix": "eslint nodes credentials package.json --fix",
		"lintfix:n8n": "n8n-node lint --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"release": "n8n-node release",
		"prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/DirectusApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/Directus/Directus.node.js",
			"dist/nodes/DirectusTrigger/DirectusTrigger.node.js"
		]
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@n8n/node-cli": "*",
		"@types/jest": "^29.5.12",
		"@typescript-eslint/eslint-plugin": "~8.32.0",
		"@typescript-eslint/parser": "~8.32.0",
		"eslint": "^9.32.0",
		"eslint-plugin-n8n-nodes-base": "^1.16.3",
		"gulp": "^5.0.0",
		"jest": "^29.7.0",
		"prettier": "^3.5.3",
		"ts-jest": "^29.1.2",
		"typescript": "^5.8.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	}
}
